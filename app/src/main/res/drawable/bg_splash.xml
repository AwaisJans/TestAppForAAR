<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Background shape (optional, you can replace it with a solid color or another drawable) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF7F51" />
        </shape>
    </item>

    <!-- Centered logo -->
    <item
        android:width="200dp"
        android:height="200dp"
        android:gravity="center">
        <bitmap android:src="@drawable/splash" />
    </item>

    <!-- Image below logo -->
    <item
        android:width="200dp"
        android:height="200dp"
        android:gravity="center_horizontal|bottom">
        <bitmap android:src="@drawable/splash" />
    </item>

</layer-list>